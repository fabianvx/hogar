@{
    ViewData["Title"] = "Inicio";
}


<!-- Carrusel -->
<div id="carouselExampleIndicators" class="carousel slide mb-5" data-bs-ride="carousel" style="margin-top:10%;">
    <!-- Indicadores del carrusel -->
    <ol class="carousel-indicators" hidden>
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></li>
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></li>
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"></li>
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3"></li>
    </ol>

    <div class="carousel-inner">
        <!-- Primer slide -->
        <div class="carousel-item active">
            <div class="d-flex align-items-center" style="background-image: url('/images/aso.png'); background-size: cover; background-position: center; height: 500px; position: relative;">
                <!-- Capa de oscurecimiento -->
                <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); z-index: 1;"></div>
                <!-- Contenido -->
                <div class="container text-center text-white" style="position: relative; z-index: 2;">
                    <h2 class="display-4 fw-bold" style="color: white; text-shadow: 1px 1px 2px black;">FORME PARTE DE NUESTRA ASAMBLEA DE ASOCIADOS</h2>
                    <p class="lead">
                        Ayúdanos a formar parte de esta gran iniciativa y contribuir al bienestar de esta poblacion.                        
                    </p>
    
                    <a asp-area="" asp-controller="Home" asp-action="Asociados" class="btn" style="background-color: #BAD535; color: #4A4A42; font-size: 18px; padding: 10px 25px; border-radius: 5px;">Más información</a>

                </div>
            </div>
        </div>

        <!-- Segundo slide -->
        <div class="carousel-item">
            <div class="d-flex align-items-center" style="background-image: url('/images/2.jpg'); background-size: cover; background-position: center; height: 500px; position: relative;">
                <!-- Capa de oscurecimiento -->
                <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); z-index: 1;"></div>
                <!-- Contenido -->
                <div class="container text-center text-white" style="position: relative; z-index: 2;">
                    <h2 class="display-4 fw-bold" style="color: white; text-shadow: 1px 1px 2px black;">CUIDADO PERSONALIZADO EN UN AMBIENTE FAMILIAR</h2>
                    <p class="lead">Brindamos un entorno cálido y familiar para nuestros residentes, donde se sienten como en casa.</p>
                    <a asp-area="" asp-controller="Home" asp-action="Servicios" class="btn" style="background-color: #BAD535; color: #4A4A42; font-size: 18px; padding: 10px 25px; border-radius: 5px;">Conoce más sobre nuestros servicios</a>

                </div>
            </div>
        </div>

        <!-- Tercer slide -->
 


        <div class="carousel-item">
            <div class="d-flex align-items-center" style="background-image: url('/images/vol.jpg'); background-size: cover; background-position: center; height: 500px; position: relative;">
                <!-- Capa de oscurecimiento -->
                <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); z-index: 1;"></div>
                <!-- Contenido -->
                <div class="container text-center text-white" style="position: relative; z-index: 2;">
                    <h2 class="display-4 fw-bold" style="color: white; text-shadow: 1px 1px 2px black;">SEA PARTE DE NUESTROS VOLUNTARIOS</h2>
                    <p class="lead">Contribuya con iniciativas del hogar ad honorem garantizando una calidad de vida inigualable para nuestros adultos mayores.</p>
                    <a asp-area="" asp-controller="Home" asp-action="Voluntariado" class="btn" style="background-color: #BAD535; color: #4A4A42; font-size: 18px; padding: 10px 25px; border-radius: 5px;">Más información</a>

                </div>
            </div>
        </div>

        <!-- Cuarto slide -->
        <div class="carousel-item">
            <div class="d-flex align-items-center" style="background-image: url('/images/3.jpg'); background-size: cover; background-position: center; height: 500px; position: relative;">
                <!-- Capa de oscurecimiento -->
                <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); z-index: 1;"></div>
                <!-- Contenido -->
                <div class="container text-center text-white" style="position: relative; z-index: 2;">
                    <h2 class="display-4 fw-bold" style="color: white; text-shadow: 1px 1px 2px black;">ESTAMOS AQUÍ PARA CUIDAR DE SUS SERES QUERIDOS</h2>
                    <p class="lead">Ofrecemos atención integral con el compromiso de mejorar la calidad de vida de las personas adultas mayores.</p>
                    <a asp-area="" asp-controller="Home" asp-action="Ingreso" class="btn" style="background-color: #BAD535; color: #4A4A42; font-size: 18px; padding: 10px 25px; border-radius: 5px;">Ver requisitos de ingreso</a>

                </div>
            </div>
        </div>
    </div>

    <!-- Controles del carrusel -->
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>



<!-- Sección Valores -->
