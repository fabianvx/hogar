@model Hogar.Application.DTOs.UsuarioDTO

@{
    ViewData["Title"] = "Detalle de Usuario";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="display-6 fw-bold">Detalle del Usuario</h1>
        <p class="text-muted">Información detallada del usuario seleccionado</p>
    </div>

    <div class="card shadow-lg mx-auto" style="max-width: 600px;">
        <div class="card-header  text-white text-center" style="background-color: #96B012;">
            <h4 class="mb-0">@Html.DisplayFor(model => model.Nombre)</h4>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong>@Html.DisplayNameFor(model => model.Apellidos):</strong>
                    <span class="text-muted">@Html.DisplayFor(model => model.Apellidos)</span>
                </li>
                <li class="list-group-item">
                    <strong>@Html.DisplayNameFor(model => model.Id):</strong>
                    <span class="text-muted">@Html.DisplayFor(model => model.Id)</span>
                </li>
                <li class="list-group-item">
                    <strong>@Html.DisplayNameFor(model => model.Correo):</strong>
                    <span class="text-muted">@Html.DisplayFor(model => model.Correo)</span>
                </li>
                <li class="list-group-item">
                    <strong>@Html.DisplayNameFor(model => model.Contraseña):</strong>
                    <span class="text-muted">********</span>
                </li>
      
                <li class="list-group-item">
                    <strong>@Html.DisplayNameFor(model => model.Estado):</strong>
                    <span class="text-muted">@Html.DisplayFor(model => model.EstadoDescripcion)</span>
                </li>
                <li class="list-group-item">
                    <strong>@Html.DisplayNameFor(model => model.TipoNavigation):</strong>
                    <span class="text-muted">@Html.DisplayFor(model => model.TipoNavigation.Descripcion)</span>
                </li>
            </ul>
        </div>
        <div class="card-footer text-center">
            <a class="btn btn-primary" style="background-color: #96B012;" asp-action="IndexAdmin">Regresar al listado</a>
        </div>
    </div>
</div>
