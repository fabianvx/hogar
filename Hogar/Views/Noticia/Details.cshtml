@model Hogar.Application.DTOs.NoticiaDTO
@{
    ViewData["Title"] = "Detalle de la Noticia";
}

<div class="container mt-5" style="margin-bottom:20%">
    <div class="card news-detail-card shadow-lg border-0">
        <div class="row g-0">
            <!-- Imagen a la izquierda en pantallas grandes -->
            <div class="col-md-6">
                <img class="img-fluid rounded-start news-image"
                     src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Imagen)"
                     alt="Imagen de la noticia">
            </div>

            <!-- Contenido a la derecha -->
            <div class="col-md-6 d-flex flex-column justify-content-center p-4">
                <h2 class="fw-bold text-dark">@Model.Titulo</h2>
                <p class="text-muted" style="font-size: 18px;">@Model.Descripcion</p>

                <a href="@Url.Action("Index", "Noticia")" class="btn btn-custom mt-3">Volver a Noticias</a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Card de detalles */
    .news-detail-card img {
        max-width: 100%;
        max-height: 400px; /* Ajusta según necesites */
        width: auto;
        height: auto;
        object-fit: cover;
        display: block;
        margin: auto;
    }

    .news-detail-card {
        border-radius: 12px;
        overflow: hidden;
        background-color: #fff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    /* Efecto hover */
    .news-detail-card:hover {
        transform: scale(1.02);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    /* Botón personalizado */
    .btn-custom {
        background-color: #BAD535;
        color: white;
        font-size: 18px;
        font-weight: bold;
        padding: 10px 25px;
        border-radius: 5px;
        text-decoration: none;
    }

    .btn-custom:hover {
        background-color: #96B012;
        color: white;
    }
</style>
